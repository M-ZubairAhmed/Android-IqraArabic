<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFD8E09"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/nativeLangNum_xmlid"
        android:background="#ffb74d"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:text="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:background="#ffb74d"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/foreignLangTextView_xmlid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="Here goes foreign words" />
        <TextView
            android:id="@+id/nativeLangTextView_xmlid"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            tools:text="Here goes native words" />
    </LinearLayout>

    <TextView
        android:id="@+id/foreignLangNum_xmlid"
        android:layout_width="80dp"
        android:background="#ffb74d"
        android:textColor="@color/primary_text"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:text="!" />

</LinearLayout>